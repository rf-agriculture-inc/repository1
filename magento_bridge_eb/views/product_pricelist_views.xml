<odoo>
    <data>

        <!-- Pricelists -->
        <record id="product_pricelist_view_inherited" model="ir.ui.view">
            <field name="name">product.pricelist.form.view.inherited</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="mag_id"/>
                </xpath>
            </field>
        </record>

        <!-- Pricelist Items -->
        <record id="product_pricelist_item_form_view_inherited" model="ir.ui.view">
            <field name="name">product.pricelist.item.form.view.inherited</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='base']" position="after">
                    <field name="wholesale_markup" attrs="{'invisible':[('compute_price', '!=', 'formula')]}"/>
                </xpath>
                <xpath expr="//group[@name='pricelist_rule_advanced']/div[1]/span[1]" position="before">
                    <span attrs="{'invisible':[('wholesale_markup', '=', False)]}">Wholsale Markup(%) + </span>
                </xpath>
            </field>
        </record>

    </data>
</odoo>