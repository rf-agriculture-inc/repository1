<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="magento_res_config_setting_form_view" model="ir.ui.view">
			<field name="name">magento.res.config.setting.form.view</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id" ref="sale.res_config_settings_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//div[@data-key='sale_management']//h2[6]" position="after">
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-9 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="magento_bridge"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="magento_bridge"/>
                                <div class="text-muted">
                                    Odoo - Magento API Bridge
                                </div>
                                <div class="content-group"
                                     name="magento_bridge"
                                     attrs="{'invisible': [('magento_bridge', '=', False)]}">
                                    <div class="mt16">
                                        <label for="mag_host" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="mag_host"
                                               attrs="{'required': [('magento_bridge', '=', True)]}"/>
                                        <label for="mag_consumer_key" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="mag_consumer_key"
                                               attrs="{'required': [('magento_bridge', '=', True)]}"/>
                                        <label for="mag_consumer_secret" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="mag_consumer_secret"
                                               attrs="{'required': [('magento_bridge', '=', True)]}"/>
                                        <label for="mag_access_token" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="mag_access_token"
                                               attrs="{'required': [('magento_bridge', '=', True)]}"/>
                                        <label for="mag_access_token_secret" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="mag_access_token_secret"
                                               attrs="{'required': [('magento_bridge', '=', True)]}"/>
                                    </div>
                                    <button type="object" name="test_magento_connection" string="Test Connection"/>
                                </div>
                            </div>
                        </div>
                    </div>
				</xpath>
			</field>
		</record>
	</data>
</odoo>